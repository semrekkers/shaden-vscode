{
    "name": "shaden-vscode",
    "displayName": "Shaden integration",
    "description": "Shaden integration for Visual Studio Code.",
    "version": "0.0.1",
    "publisher": "semrekkers",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:shaden.patch"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "shaden.patch",
                "title": "Shaden: Patch"
            }
        ],
        "configuration": [
            {
                "title": "Shaden configuration",
                "properties": {
                    "shaden.port": {
                        "type": "integer",
                        "default": 5000,
                        "description": "Shaden HTTP API endpoint port"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
